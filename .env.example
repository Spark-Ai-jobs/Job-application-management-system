# ============================================
# SparkWorkforce Environment Configuration
# ============================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# ============================================
# Domain Configuration
# ============================================
DOMAIN=sparkworkforce.studio
CORS_ORIGIN=https://sparkworkforce.studio

# ============================================
# Database Configuration
# ============================================
POSTGRES_USER=spark
POSTGRES_PASSWORD=your_secure_postgres_password_here
POSTGRES_DB=spark_ai

# ============================================
# Redis Configuration
# ============================================
REDIS_PASSWORD=your_secure_redis_password_here

# ============================================
# MinIO (S3-Compatible Storage)
# ============================================
MINIO_ROOT_USER=your_minio_admin_user
MINIO_ROOT_PASSWORD=your_secure_minio_password_here

# ============================================
# JWT Authentication
# ============================================
JWT_SECRET=your_super_secure_jwt_secret_key_here_min_32_chars
JWT_EXPIRES_IN=7d

# ============================================
# Application Settings
# ============================================
NODE_ENV=production
ATS_THRESHOLD=90
SCRAPE_INTERVAL_HOURS=6
SLA_TIMEOUT_MINUTES=20

# ============================================
# Docker Image Configuration
# ============================================
GITHUB_REPOSITORY_OWNER=spark-ai-jobs
IMAGE_TAG=latest
